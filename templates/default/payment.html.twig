{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="col-xs-1 offset-xs-2 col-sm-6 offset-sm-3 col-md-4 offset-md-4 mt-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title text-center">
                        <h3>Finalisation de votre commande</h3>
                    </div>
                    <div class="card-text">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_row(form.streetName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.zipCode, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_row(form.submit, {'attr': {'class': 'btn btn-block btn-primary'}}) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}
